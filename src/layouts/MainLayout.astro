<style is:global>
	:root {
		--accent: 7, 108, 69;
		--accent-light: 0, 103, 54;
		--accent-dark: 43, 129, 89;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(167, 183, 175) 30%,
			white 60%
		);
		--bgcolor: rgb(2, 0, 36);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #272727;
	}
	html, body {
        margin: 0;
        padding: 0;
        height: 100%;
		overflow-x: clip;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.banner {
		position: relative;
        width: 100%;
        display: grid;
        background-color: #f8f9fa;
		grid-template-areas: "stack";
		z-index: 0;
		overflow: clip;
    }
	.banner .bannerText {
		background-color: rgba(0,0,0,.8);
		color: #fff;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem 1.5rem;
		z-index: 4;
		position: absolute;
		left: 50%;
		top: 20%;
		border-radius: 5px;
		-moz-box-shadow: 0 20px 30px rgba(0, 0, 0, 0.6);
		-webkit-box-shadow: 0 20px 30px rgba(0, 0, 0, 0.6);
		box-shadow: 0 20px 30px rgba(0, 0, 0, 0.6);
		border: 1px solid rgba(255, 255, 255, 0.3);
		text-shadow: 0 1px 1px rgba(0, 0, 0, 0.4);
		transform: translateX(-50%);
		--parallax-speed: 9;
		grid-area: stack;
		animation: text-parallax linear;
		animation-timeline: scroll();
	}
	.banner .sky {
		z-index: 2;
		transform: scale(1.5);
		width: 100vw;
		--parallax-speed: 12;
	}
	.banner .grass {
		z-index: 5;
		width: 100vw;
		--parallax-speed: 6;
	}
	.banner .player1 {
		z-index: 6;
		width: 20vw;
		--parallax-speed: 3;
		position: absolute;
		bottom: -20%;
		left: 15%;
	}
	.banner .player2 {
		z-index: 6;
		width: 35vw;
		--parallax-speed: 3;
		position: absolute;
		bottom: 0%;
		left: 33%;
	}
	.banner .player3 {
		z-index: 6;
		width: 20vw;
		--parallax-speed: 3;
		position: absolute;
		bottom: -20%;
		right: 15%;
	}
	.banner .grass, .banner .sky, .banner .player1, .banner .player2, .banner .player3 {
		grid-area: stack;
		animation: parallax linear;
		animation-timeline: scroll();
	}
      .navbar {
        position: fixed;
		box-sizing: border-box;
        top: 0;
        left: 0;
        width: 100%;
        background-color: #333;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
        transform: translateY(-100%);
        transition: transform 0.3s ease-in-out;
		padding: 1rem;
		z-index: 99;
      }
      .navbar.visible {
        transform: translateY(0);
      }
	  .navbar .logo {
		width: 100px;
		transition: transform 0.3s ease-in-out;
	}

	.parallax-logo {
		transform: translate(-50%, -120%);
	}
	.logo.fade-out {
		opacity: 0;
	}
    .navbar .logo {
        width: 50px;
		transition: width 0.3s ease-in-out, opacity 0.5s ease-in-out;
  		opacity: 1;
    }
	  .banner .logo {
		width: 5rem;
		padding-right: 1.5rem;
	}

	@keyframes parallax {
		to {
			transform: translateY(calc(var(--parallax-speed) * 10vw));
		}
	}
	@keyframes text-parallax {
		to {
			transform: translate(-50%, calc(var(--parallax-speed) * 10vw));
		}
	}

/* SOCIAL MEDIA */
.social-media {
  margin:0;
  padding:0;
  display:flex;
}

.social-media li {
  list-style: none;
}

.social-media li a {
  position: relative;
  width:3rem;
  height:3rem;
  display:flex;
  text-align:center;
  justify-content: center;
  margin:0 10px;
  border-radius: 50%;
  padding: 6px;
  box-sizing: border-box;
  text-decoration:none;
  box-shadow: 0 10px 15px rgba(0,0,0,0.3);
  background: linear-gradient(0deg, #ddd, #fff);
  transition: .5s;
}

.social-media li a:hover {
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  text-decoration:none;
  transform: scale(1.1);
}

.social-media li a svg {
  width: 2rem;
  display:block;
  background: linear-gradient(0deg, #fff, #ddd);
  border-radius: 50%;
  line-height: calc(60px - 12px);
  font-size:24px;
  color: #262626;
  transition: .5s;
  fill: black;
}

.social-media li:nth-child(1) a:hover svg path {
  fill: #6441a5;
}

.social-media li:nth-child(2) a:hover svg path:nth-child(1) {
  fill: #FF0000;
}

.social-media li:nth-child(3) a:hover svg path {
  fill: #C13584;
}

.social-media li:nth-child(4) a:hover svg path {
  fill: #000000;
}
</style>
