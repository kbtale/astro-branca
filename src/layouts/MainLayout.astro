---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="navbar" id="Navbar">
				<img src="/dark_logo.png" class="logo" alt="Logo" id="NavbarLogo">
		</div>
		<div class="banner" id="Banner">
			<div class="bannerText">
				<img src="/logo.png" class="logo" alt="Logo" id="BannerLogoClone">
				<h1>Bienvenido a <span class="text-gradient">Branca FÃºtbol</span></h1>
			</div>
			<img src="/SKY_BANNER.png" alt="" class="sky">
			<img src="/GRASS_BANNER.png" alt="" class="grass">
			<img src="/Player1.png" alt="" class="player1">
			<img src="/Player2.png" alt="" class="player2">
			<img src="/Player3.png" alt="" class="player3">
		</div>
		<slot></slot>
		<script>
			window.addEventListener('scroll', function() {
			const Navbar = document.getElementById('Navbar');
			const scrollY = window.scrollY;
			const maxScroll = 240;

			if (scrollY > maxScroll) {
				Navbar.classList.add('visible');
			} else {
				Navbar.classList.remove('visible');
			}
			});
		</script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 7, 108, 69;
		--accent-light: 0, 103, 54;
		--accent-dark: 43, 129, 89;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(167, 183, 175) 30%,
			white 60%
		);
		--bgcolor: rgb(2, 0, 36);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #272727;
	}
	html, body {
        margin: 0;
        padding: 0;
        height: 100%;
		overflow-x: clip;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.banner {
		position: relative;
        width: 100%;
        display: grid;
        background-color: #f8f9fa;
		grid-template-areas: "stack";
		z-index: 0;
		overflow: clip;
    }
	.banner .bannerText {
		background-color: rgba(0,0,0,.8);
		color: #fff;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem 1.5rem;
		z-index: 4;
		position: absolute;
		left: 50%;
		top: 20%;
		border-radius: 5px;
		-moz-box-shadow: 0 20px 30px rgba(0, 0, 0, 0.6);
		-webkit-box-shadow: 0 20px 30px rgba(0, 0, 0, 0.6);
		box-shadow: 0 20px 30px rgba(0, 0, 0, 0.6);
		border: 1px solid rgba(255, 255, 255, 0.3);
		text-shadow: 0 1px 1px rgba(0, 0, 0, 0.4);
		transform: translateX(-50%);
		--parallax-speed: 9;
		grid-area: stack;
		animation: text-parallax linear;
		animation-timeline: scroll();
	}
	.banner .sky {
		z-index: 2;
		transform: scale(1.5);
		width: 100vw;
		--parallax-speed: 12;
	}
	.banner .grass {
		z-index: 5;
		width: 100vw;
		--parallax-speed: 6;
	}
	.banner .player1 {
		z-index: 6;
		width: 20vw;
		--parallax-speed: 3;
		position: absolute;
		bottom: -20%;
		left: 15%;
	}
	.banner .player2 {
		z-index: 6;
		width: 35vw;
		--parallax-speed: 3;
		position: absolute;
		bottom: 0%;
		left: 33%;
	}
	.banner .player3 {
		z-index: 6;
		width: 20vw;
		--parallax-speed: 3;
		position: absolute;
		bottom: -20%;
		right: 15%;
	}
	.banner .grass, .banner .sky, .banner .player1, .banner .player2, .banner .player3 {
		grid-area: stack;
		animation: parallax linear;
		animation-timeline: scroll();
	}
      .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 60px;
        background-color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        transform: translateY(-100%);
        transition: transform 0.3s ease-in-out;
		z-index: 99;
      }
      .navbar.visible {
        transform: translateY(0);
      }
	  .navbar .logo {
		width: 100px;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		transition: transform 0.3s ease-in-out;
	}

	.parallax-logo {
		transform: translate(-50%, -120%);
	}
	.logo.fade-out {
		opacity: 0;
	}
    .navbar .logo {
        width: 50px;
		transition: width 0.3s ease-in-out, opacity 0.5s ease-in-out;
  		opacity: 1;
    }
	  .banner .logo {
		width: 5rem;
		padding-right: 1.5rem;
	}

	@keyframes parallax {
		to {
			transform: translateY(calc(var(--parallax-speed) * 10vw));
		}
	}
	@keyframes text-parallax {
		to {
			transform: translate(-50%, calc(var(--parallax-speed) * 10vw));
		}
	}
</style>
