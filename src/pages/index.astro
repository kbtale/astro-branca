<style>
	.squad {
		margin: 0 3rem 1rem 3rem;
		padding: 1rem;
		width: 100%;
		max-width: calc(100% - 8rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		box-shadow: -5px -5px 20px #212121, 5px 5px 20px #141414;
		transition: all 0.2s ease-in-out;
		display: flex;
		flex-direction: column;
		align-content: center;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
	}
	.squad-title {
		flex: 1;
	}

	.row {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-width: 100%;
		padding-left: 3rem;
		padding-right: 3rem;
	}

	.silhouettes {
		display: flex;
		flex-wrap: nowrap;
		justify-content: space-evenly;
		width: 45%;
	}
	.silhouettes > .silhouette {
		height: 5rem;
		cursor: pointer;
		transition: all .3s cubic-bezier(0.23, 1, 0.320, 1);
	}
	.silhouettes > .silhouette:hover {
		transform: scale(1.1);
	}
	.silhouettes > .gk:hover {
		filter: brightness(0) saturate(100%) invert(89%) sepia(27%) saturate(2571%) hue-rotate(3deg) brightness(92%) contrast(101%) drop-shadow(3px 3px 2px rgba(234, 210, 0, 0.4));
	}
	.silhouettes > .def:hover {
		filter: brightness(0) saturate(100%) invert(30%) sepia(97%) saturate(3550%) hue-rotate(196deg) brightness(96%) contrast(101%) drop-shadow(3px 3px 2px rgba(1, 63, 219, 0.4));
	}
	.silhouettes > .mid:hover {
		filter: brightness(0) saturate(100%) invert(59%) sepia(97%) saturate(3595%) hue-rotate(79deg) brightness(98%) contrast(104%) drop-shadow(3px 3px 2px rgba(13, 184, 4, 0.4));
	}
	.silhouettes > .fw:hover {
		filter: brightness(0) saturate(100%) invert(19%) sepia(99%) saturate(6426%) hue-rotate(358deg) brightness(86%) contrast(111%) drop-shadow(3px 3px 2px rgba(204, 4, 4, 0.4));
	}
	.silhouettes > .mgr:hover {
		filter: brightness(0) saturate(100%) invert(14%) sepia(97%) saturate(4527%) hue-rotate(276deg) brightness(73%) contrast(120%) drop-shadow(3px 3px 2px rgba(92, 13, 218, 0.4));
	}
	.silhouettes > .gk:active {
		filter: brightness(0) saturate(100%) invert(89%) sepia(27%) saturate(2571%) hue-rotate(3deg) brightness(92%) contrast(101%) drop-shadow(3px 3px 2px rgba(234, 210, 0, 0.4));
	}
	.silhouettes > .def:active {
		filter: brightness(0) saturate(100%) invert(30%) sepia(97%) saturate(3550%) hue-rotate(196deg) brightness(96%) contrast(101%) drop-shadow(3px 3px 2px rgba(1, 63, 219, 0.4));
	}
	.silhouettes > .mid:active {
		filter: brightness(0) saturate(100%) invert(59%) sepia(97%) saturate(3595%) hue-rotate(79deg) brightness(98%) contrast(104%) drop-shadow(3px 3px 2px rgba(13, 184, 4, 0.4));
	}
	.silhouettes > .fw:active {
		filter: brightness(0) saturate(100%) invert(19%) sepia(99%) saturate(6426%) hue-rotate(358deg) brightness(86%) contrast(111%) drop-shadow(3px 3px 2px rgba(204, 4, 4, 0.4));
	}
	.silhouettes > .mgr:active {
		filter: brightness(0) saturate(100%) invert(14%) sepia(97%) saturate(4527%) hue-rotate(276deg) brightness(73%) contrast(120%) drop-shadow(3px 3px 2px rgba(92, 13, 218, 0.4));
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card-grid {
		width: 100%;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		padding: 0;
		justify-items: center;
	}
	.input-group {
		display: flex;
		align-items: center;
		justify-content: flex-start;
	}
	.input-group label {
		margin: 0;
		flex: 1;
	}
	button, input {
	border: 0;
	outline: 0;
	font-size: 16px;
	border-radius: 320px;
	padding: 16px;
	background-color: #272727;
	text-shadow: 1px 1px 0 #212121;
	}

	label {
	display: block;
	margin-bottom: 24px;
	width: 100%;
	}

	input {
	color: #feeeee;
	caret-color: #feeeee;
	margin-right: 8px;
	box-shadow: inset 2px 2px 5px #141414, inset -5px -5px 10px #212121;
	width: 100%;
	box-sizing: border-box;
	transition: all 0.2s ease-in-out;
	appearance: none;
	-webkit-appearance: none;
	}
	button {
	color: #61677C;
	font-weight: bold;
	box-shadow: -5px -5px 20px #212121, 5px 5px 20px #141414;
	transition: all 0.2s ease-in-out;
	cursor: pointer;
	font-weight: 600;
	}
	button:hover {
	box-shadow: -2px -2px 5px #212121, 2px 2px 5px #141414;
	}
	button:active {
	box-shadow: inset 1px 1px 2px #141414, inset -1px -1px 2px #212121;
	}
	button .icon {
	margin-right: 8px;
	}
	button.unit {
		border-radius: 8px;
		line-height: 0;
		width: 48px;
		height: 48px;
		display: inline-flex;
		justify-content: center;
		align-items: center;
		margin: 0 8px;
		font-size: 19.2px;
	}
	button.unit .icon {
	fill: #fff;
	margin-right: 0;
	}

	@media (max-width: 768px) {
    .row {
      flex-direction: column;
    }
</style>
