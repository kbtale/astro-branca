<style>
	.squad {
		margin: 0 3rem 1rem 3rem;
		padding: 1rem;
		width: 100%;
		max-width: calc(100% - 8rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		box-shadow: -5px -5px 20px #212121, 5px 5px 20px #141414;
		transition: all 0.2s ease-in-out;
		display: flex;
		flex-direction: column;
		align-content: center;
		justify-content: center;
		align-items: center;
	}

	.row {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-width: 100%;
		padding-left: 3rem;
		padding-right: 3rem;
	}

	.silhouettes {
		display: flex;
		flex-wrap: nowrap;
		justify-content: space-evenly;
		width: 45%;
	}
	.silhouettes > .silhouette {
		height: 5rem;
		cursor: pointer;
		transition: all .5 cubic-bezier(0.23, 1, 0.320, 1);
	}
	.silhouettes > .silhouette:hover {
		transform: scale(1.1);
	}
	.silhouettes > .gk:hover {
		filter: brightness(0) saturate(100%) invert(89%) sepia(27%) saturate(2571%) hue-rotate(3deg) brightness(92%) contrast(101%);
	}
	.silhouettes > .def:hover {
		filter: brightness(0) saturate(100%) invert(30%) sepia(97%) saturate(3550%) hue-rotate(196deg) brightness(96%) contrast(101%);
	}
	.silhouettes > .mid:hover {
		filter: brightness(0) saturate(100%) invert(59%) sepia(97%) saturate(3595%) hue-rotate(79deg) brightness(98%) contrast(104%);
	}
	.silhouettes > .fw:hover {
		filter: brightness(0) saturate(100%) invert(19%) sepia(99%) saturate(6426%) hue-rotate(358deg) brightness(86%) contrast(111%);
	}
	.silhouettes > .mgr:hover {
		filter: brightness(0) saturate(100%) invert(14%) sepia(97%) saturate(4527%) hue-rotate(276deg) brightness(73%) contrast(120%);
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card-grid {
		width: 100%;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		padding: 0;
		justify-items: center;
	}
</style>
